@{
    ViewData["Title"] = "";
}
@inject UserManager<UserIdentity> UserManager
@addTagHelper *,PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Review>

<section class="hero-wrap hero-wrap-2" style="background-image: url(/images/bg_2.jpg);" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center mb-4">
                <h1 class="mb-2 bread">@ViewData["Header"]</h1>
            </div>
        </div>
    </div>
</section>
@*Blogs lists and pages*@

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @ViewData["Model"]
            @foreach (var item in Model)
            {
                var x = await UserManager.FindByIdAsync(item.UserID);
                ViewData["Username"] = x.UserName;
                <div class="col-md-4 ftco-animate">
                    <div class="blog-entry">
                        <a href="/Blogs/blog/@item.ReviewID" class="block-20" style="background-image: url(@item.BannerImage);"></a>
                        <div class="text pt-3 pb-4 px-4">
                            <div class="meta">
                                @for (int i = 1; i <= item.Star; i++)
                                {
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-star-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.283.95l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" /></svg>
                                }<br />
                                <div>@item.PublishDate</div>
                                <div>@ViewData["Username"]</div>
                            </div>
                            <h3 class="heading"><a href="/Blogs/blog/@item.ReviewID">@item.Header</a></h3>
                            <div>@item.ShortCast</div>
                            <p class="clearfix">
                                <a href="/Blogs/blog/@item.ReviewID" class="float-left read"><u>Makaleyi oku</u></a>
                            </p>
                        </div>
                    </div>
                    @{
                        ViewData["Title"] = ViewData["Username"];
                        ViewData["Header"] = ViewData["Username"] + " adlı kullanıcının makaleleri";
                    }
                </div>
            }
        </div>
        <div class="row no-gutters my-5">
            <div class="col text-center">
                @if (ViewData["Model"] != "Bu Kullanıcı henüz bir şey paylaşmamış")
                {
                    <pager list="@Model" asp-controller="Blog" asp-action="Index" />
                }
            </div>
        </div>
    </div>
    <div class="col-lg-4 sidebar ftco-animate">
        <div class="sidebar-box ftco-animate">
            <div class="block-21 mb-4 d-flex">
                <a class="blog-img mr-4" href="/user/profile/@ViewData["UserID"]" style=" background-image: url(@ViewData["PhotoProfile"]);"></a>
                <div class="text">
                    <h3 class="heading"><a href="/user/profile/@ViewData["UserID"]">@ViewData["BlogUser"]</a></h3>
                    <div class="meta">
                        <div>
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-calendar-date-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M4 .5a.5.5 0 0 0-1 0V1H2a2 2 0 0 0-2 2v1h16V3a2 2 0 0 0-2-2h-1V.5a.5.5 0 0 0-1 0V1H4V.5zM16 14V5H0v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2zm-6.664-1.21c-1.11 0-1.656-.767-1.703-1.407h.683c.043.37.387.82 1.051.82.844 0 1.301-.848 1.305-2.164h-.027c-.153.414-.637.79-1.383.79-.852 0-1.676-.61-1.676-1.77 0-1.137.871-1.809 1.797-1.809 1.172 0 1.953.734 1.953 2.668 0 1.805-.742 2.871-2 2.871zm.066-2.544c.625 0 1.184-.484 1.184-1.18 0-.832-.527-1.23-1.16-1.23-.586 0-1.168.387-1.168 1.21 0 .817.543 1.2 1.144 1.2zm-2.957-2.89v5.332H5.77v-4.61h-.012c-.29.156-.883.52-1.258.777V8.16a12.6 12.6 0 0 1 1.313-.805h.632z" /></svg>
                            @ViewData["BlogPublishDate"]
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- END COL -->
    </div>
</section>